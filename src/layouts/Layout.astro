---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Demo of Cloudflare Data Localization Suite (DLS) features." />
		<meta name="viewport" content="width=device-width" />
		<link rel=icon href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 255, 102, 51; /* Cloudflare brand orange: #FF6633 */
		--accent-light: 0, 81, 195; /* Cloudflare brand blue: #0051c3 */
		--accent-dark: 84, 84, 84; /* Dark color for contrast */
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #fff; /* Change background to white */
		background-size: 224px;
	}
</style>
